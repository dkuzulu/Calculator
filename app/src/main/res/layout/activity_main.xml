<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_weight="1"
        android:background="@color/grey"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buttonAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="AC"
                android:textSize="18sp"
                android:onClick="buttonClean"/>


            <Button
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:id="@+id/buttonplusoumoins"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="+/-"
                android:onClick="buttonNumberEvent"/>


            <Button
                android:id="@+id/buttonpourcentage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buttonPercent"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttondivision"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:onClick="buttonOperationEvent"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/button7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="7"
                android:textSize="18sp"
                android:onClick="buttonNumberEvent"/>


            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/button8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="8"
                android:textSize="18sp"
                android:onClick="buttonNumberEvent"/>


            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/button9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="9"
                android:textSize="18sp"
                android:onClick="buttonNumberEvent"/>


            <Button
                android:id="@+id/buttonmultiplication"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:onClick="buttonOperationEvent"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="4"
                android:textSize="18sp"
                android:onClick="buttonNumberEvent"/>


            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/button5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="5"
                android:textSize="18sp"
                android:onClick="buttonNumberEvent"/>


            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/button6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="6"
                android:textSize="18sp"
                android:onClick="buttonNumberEvent"/>



            <Button
                android:id="@+id/buttonsoustraction"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/button1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="1"
                android:textSize="18sp"
                android:onClick="buttonNumberEvent"/>


            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/button2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="2"
                android:textSize="18sp"
                android:onClick="buttonNumberEvent"/>


            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/button3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="3"
                android:textSize="18sp"
                android:onClick="buttonNumberEvent"/>


            <Button
                android:id="@+id/buttonaddition"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:onClick="buttonOperationEvent"/>

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button0"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:layout_weight="2"
            android:background="@color/whiteback"
            android:text="0"
            android:textSize="18sp"
            android:onClick="buttonNumberEvent"/>

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/buttonvirgule"
            android:layout_width="30pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:text="."
            android:textSize="18sp"
            android:onClick="buttonNumberEvent"/>

        <Button
            android:id="@+id/buttonequal"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buop"
            android:text="="
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="buttonEqualEvent"/>
    </LinearLayout>
</LinearLayout>